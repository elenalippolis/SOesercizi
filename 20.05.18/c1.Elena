monitor riempisvuota{
condition svuota, riempi;
queue <> coda_processi = new Queue<pid, int>;
int numProc = 0;

void entra(getpid()){
	if(numProc==MAX){
	  signal(svuota);
	  wait(riempi);
	
	numProc ++;
	coda_processi.enqueue(getpid(), numProc);
}

void esci(getpid()){
	wait(svuota);
	while(numProc != 0){
	//dequeue fa uscire l'ultimo elemento entrato nella coda
	   coda_processi.dequeue();
	   numProc --;
	}
	signal(riempi);
}
